<Page
    x:Class="SystemInfoViewer.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="16" VerticalScrollBarVisibility="Auto"  Background="{ThemeResource SystemControlBackgroundAltHighBrush}">
        <StackPanel Spacing="12">
            <TextBlock Text="设置" 
                      Style="{StaticResource HeaderTextBlockStyle}"/>

            <!-- 个性化设置卡片 -->
            <Border Style="{StaticResource InfoCardStyle}">
                <StackPanel Spacing="8">
                    <TextBlock Text="个性化" 
                  Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0" Spacing="-50">
                        <TextBlock Text="主题:" 
                       VerticalAlignment="Center"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Width="100"/>
                        <ComboBox x:Name="ThemeComboBox" 
                      Width="200"
                      SelectionChanged="ThemeComboBox_SelectionChanged">
                            <ComboBoxItem Tag="Light">浅色</ComboBoxItem>
                            <ComboBoxItem Tag="Dark">深色</ComboBoxItem>
                            <ComboBoxItem Tag="System">跟随系统</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Column="0" Spacing="-90">
                            <CheckBox x:Name="HideThemeButtonCheckBox"
                  Checked="HideThemeButtonCheckBox_Checked"
                  Unchecked="HideThemeButtonCheckBox_Unchecked"/>
                            <TextBlock Text="隐藏侧边栏主题切换按钮"
                   VerticalAlignment="Center"
                   Style="{StaticResource BodyTextBlockStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="-150,0,0,0" Spacing="-90">
                            <CheckBox x:Name="ThemeButtonLeftAlignCheckBox"
                  Checked="ThemeButtonLeftAlignCheckBox_Checked"
                  Unchecked="ThemeButtonLeftAlignCheckBox_Unchecked"/>
                            <TextBlock Text="侧边栏主题切换按钮靠左显示"
                   VerticalAlignment="Center"
                   Style="{StaticResource BodyTextBlockStyle}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 窗口动画设置 -->
            <Border Style="{StaticResource InfoCardStyle}">
                <StackPanel Spacing="8">
                    <TextBlock Text="系统" 
                              Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Spacing="-100">
                        <ToggleSwitch x:Name="AnimationToggleSwitch" Margin="0,0,0,0"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Toggled="AnimationToggleSwitch_Toggled"
                                      OffContent=""
                                 OnContent=""/>
                        <TextBlock Text="在最大化和最小化时显示窗口动画"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource BodyTextBlockStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 重置设置 -->
            <Border Style="{StaticResource InfoCardStyle}">
                <StackPanel Spacing="8">
                    <TextBlock Text="重置" 
                              Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Content="重置设置"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Left"
                            Click="DelConfig_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
