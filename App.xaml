<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="SystemInfoViewer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SystemInfoViewer">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

                <!-- 应用程序自定义资源 -->
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <!-- 浅色主题 -->
                        <ResourceDictionary x:Key="Light">
                            <!-- 系统颜色 -->
                            <SolidColorBrush x:Key="WindowCaptionBackground">Transparent</SolidColorBrush>
                            <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled">Transparent</SolidColorBrush>
                            <Color x:Key="SystemAccentColor">#0067C0</Color>
                            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FAFAFA"/>
                            <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#F5F5F5"/>
                            <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#1A1A1A"/>
                            <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#5E5E5E"/>
                            <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#FFFFFFFF"/>
                            <SolidColorBrush x:Key="TitleBarIconForeground" Color="#1A1A1A"/>

                            <!-- 控件颜色 -->
                            <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="Transparent"/>
                            <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#E8E8E8"/>
                            <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="#D0D0D0"/>
                            <SolidColorBrush x:Key="CardHoverBackgroundBrush" Color="#F0F0F0"/>
                            <SolidColorBrush x:Key="CardPressedBackgroundBrush" Color="#E8E8E8"/>
                            <SolidColorBrush x:Key="CardBorderHighlightBrush" Color="#BCBCBC"/>

                            <!-- 卡片颜色 -->
                            <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>
                            <SolidColorBrush x:Key="CardBorderBrush" Color="#E0E0E0"/>

                            <!-- 导航按钮 -->
                            <SolidColorBrush x:Key="NavButtonCheckedBackground" Color="{StaticResource SystemAccentColor}"/>
                            <SolidColorBrush x:Key="NavButtonCheckedForeground" Color="White"/>
                        </ResourceDictionary>

                        <!-- 深色主题 -->
                        <ResourceDictionary x:Key="Dark">
                            <!-- 系统颜色 -->
                            <SolidColorBrush x:Key="WindowCaptionBackground">Transparent</SolidColorBrush>
                            <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled">Transparent</SolidColorBrush>
                            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#202020"/>
                            <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#2B2B2B"/>
                            <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#F5F5F5"/>
                            <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#A0A0A0"/>
                            <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#FF000000"/>
                            <SolidColorBrush x:Key="TitleBarIconForeground" Color="#F5F5F5"/>

                            <!-- 控件颜色 -->
                            <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="Transparent"/>
                            <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#3A3A3A"/>
                            <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="#505050"/>
                            <SolidColorBrush x:Key="CardHoverBackgroundBrush" Color="#383838"/>
                            <SolidColorBrush x:Key="CardPressedBackgroundBrush" Color="#404040"/>
                            <SolidColorBrush x:Key="CardBorderHighlightBrush" Color="#5E5E5E"/>

                            <!-- 卡片颜色 -->
                            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2D2D2D"/>
                            <SolidColorBrush x:Key="CardBorderBrush" Color="#444444"/>

                            <!-- 导航按钮 -->
                            <SolidColorBrush x:Key="NavButtonCheckedBackground" Color="{StaticResource SystemAccentColor}"/>
                            <SolidColorBrush x:Key="NavButtonCheckedForeground" Color="White"/>
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>

                    <!-- 可点击卡片样式 -->
                    <Style x:Key="ClickableCardStyle" TargetType="Button">
                        <Setter Property="Background" Value="{ThemeResource CardBackgroundBrush}"/>
                        <Setter Property="BorderBrush" Value="{ThemeResource CardBorderBrush}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="CornerRadius" Value="8"/>
                        <Setter Property="Padding" Value="16"/>
                        <Setter Property="Margin" Value="0,0,0,16"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="VerticalAlignment" Value="Stretch"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal"/>
                                                <VisualState x:Name="PointerOver">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="Background">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource CardHoverBackgroundBrush}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="BorderBrush">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource CardBorderHighlightBrush}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="Background">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource CardPressedBackgroundBrush}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="BorderBrush">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource CardBorderHighlightBrush}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Disabled">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="Opacity">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="0.5"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>

                                        <Border x:Name="Background" 
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="{TemplateBinding CornerRadius}"/>

                                        <ContentPresenter x:Name="ContentPresenter"
                                                          Content="{TemplateBinding Content}"
                                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                                          Margin="{TemplateBinding Padding}"
                                                          HorizontalAlignment="Left"
                                                          VerticalAlignment="Top"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <!-- 标题链接文本样式 -->
                    <Style x:Key="LinkTextStyle" TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <Setter Property="IsHitTestVisible" Value="True"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontFamily" Value="{StaticResource MiSansFont}"/>
                        <Setter Property="FontSize" Value="28"/>
                    </Style>

                    <!-- 配合链接文本使用的容器样式 -->
                    <Style x:Key="LinkHostStyle" TargetType="Border">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                    </Style>

                    <!-- 字体定义 -->
                    <FontFamily x:Key="MiSansFont">
                        ms-appx:///Assets/Fonts/MiSans-Medium.ttf#MiSans
                    </FontFamily>

                    <!-- ComboBox 全局样式 -->
                    <Style TargetType="ComboBox">
                        <Setter Property="FontFamily" Value="{StaticResource MiSansFont}"/>
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>

                    <!-- Button 全局样式 -->
                    <Style TargetType="Button">
                        <Setter Property="FontFamily" Value="{StaticResource MiSansFont}"/>
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>

                    <!-- 文本样式 -->
                    <Style x:Key="CaptionTextBlockStyle" TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="{StaticResource MiSansFont}"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
                    </Style>

                    <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextStyle}">
                        <Setter Property="FontSize" Value="28"/>
                        <Setter Property="Margin" Value="0,0,0,16"/>
                    </Style>

                    <Style x:Key="SubtitleTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextStyle}">
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="Margin" Value="0,0,0,8"/>
                    </Style>

                    <Style x:Key="BodyTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextStyle}">
                        <Setter Property="FontSize" Value="14"/>
                    </Style>

                    <Style x:Key="BaseTextStyle" TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="{StaticResource MiSansFont}"/>
                        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>

                    <!-- 卡片样式 -->
                    <Style x:Key="InfoCardStyle" TargetType="Border">
                        <Setter Property="Background" Value="{ThemeResource CardBackgroundBrush}"/>
                        <Setter Property="BorderBrush" Value="{ThemeResource CardBorderBrush}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="CornerRadius" Value="8"/>
                        <Setter Property="Padding" Value="16"/>
                        <Setter Property="Margin" Value="0,0,0,16"/>
                    </Style>

                    <!-- 导航按钮样式 -->
                    <Style x:Key="NavButtonStyle" TargetType="RadioButton">
                        <Setter Property="Background" Value="{ThemeResource ButtonBackgroundBrush}"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
                        <Setter Property="FontFamily" Value="{StaticResource MiSansFont}"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="CornerRadius" Value="4"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="RadioButton">
                                    <Grid>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal"/>
                                                <VisualState x:Name="PointerOver">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="Background">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonHoverBackgroundBrush}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="Background">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonPressedBackgroundBrush}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Checked">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="Background">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource NavButtonCheckedBackground}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource NavButtonCheckedForeground}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="CheckedPointerOver">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="Background">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource NavButtonCheckedBackground}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource NavButtonCheckedForeground}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="CheckedPressed">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="Background">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource NavButtonCheckedBackground}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource NavButtonCheckedForeground}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>

                                        <Border x:Name="Background" 
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                CornerRadius="{TemplateBinding CornerRadius}"/>

                                        <ContentPresenter x:Name="ContentPresenter"
                                                          Content="{TemplateBinding Content}"
                                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                                          Margin="{TemplateBinding Padding}"
                                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                          VerticalAlignment="Center"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <!-- 标题栏按钮样式 -->
                    <Style x:Key="TitleBarButtonStyle" TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{ThemeResource TitleBarIconForeground}"/>
                        <Setter Property="Width" Value="46"/>
                        <Setter Property="Height" Value="32"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal"/>
                                                <VisualState x:Name="PointerOver">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="Background">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonHoverBackgroundBrush}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="Background">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonPressedBackgroundBrush}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>

                                        <Border x:Name="Background" 
                            Background="{TemplateBinding Background}"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            CornerRadius="0"/>

                                        <ContentPresenter x:Name="ContentPresenter"
                                      Content="{TemplateBinding Content}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal"/>
                                                <VisualState x:Name="PointerOver">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="Background">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="#E81123"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="White"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="Background">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="#F1707A"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="White"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>

                                        <Border x:Name="Background" 
                            Background="{TemplateBinding Background}"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            CornerRadius="0"/>

                                        <ContentPresenter x:Name="ContentPresenter"
                                      Content="{TemplateBinding Content}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <!-- 通用按钮样式 -->
                    <Style x:Key="AccentButtonStyle" TargetType="Button">
                        <Setter Property="Background" Value="{ThemeResource SystemAccentColor}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontFamily" Value="{StaticResource MiSansFont}"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="CornerRadius" Value="4"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal"/>
                                                <VisualState x:Name="PointerOver">
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="BackgroundBrush" 
                                                   Storyboard.TargetProperty="Color"
                                                   To="{ThemeResource SystemAccentColorLight1}"/>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="BackgroundBrush" 
                                                   Storyboard.TargetProperty="Color"
                                                   To="{ThemeResource SystemAccentColorDark1}"/>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Disabled">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="Background">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlDisabledBaseLowBrush}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>

                                        <Border x:Name="Background" CornerRadius="{TemplateBinding CornerRadius}">
                                            <Border.Background>
                                                <SolidColorBrush x:Name="BackgroundBrush" Color="{ThemeResource SystemAccentColor}"/>
                                            </Border.Background>
                                        </Border>

                                        <ContentPresenter x:Name="ContentPresenter"
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                    Margin="{TemplateBinding Padding}"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="Center"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
    