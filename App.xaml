<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="SystemInfoViewer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SystemInfoViewer">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

                <!-- 添加主题字典 -->
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <!-- 浅色主题 -->
                        <ResourceDictionary x:Key="Light">
                            <!-- 系统颜色 -->
                            <SolidColorBrush x:Key="AppBackgroundBrush" Color="White"/>
                            <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="Black"/>

                            <!-- 卡片颜色 -->
                            <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="#F5F5F5"/>
                            <SolidColorBrush x:Key="CardStrokeColorDefaultBrush" Color="#E0E0E0"/>
                        </ResourceDictionary>

                        <!-- 深色主题 -->
                        <ResourceDictionary x:Key="Dark">
                            <!-- 系统颜色 -->
                            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#1E1E1E"/>
                            <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="White"/>

                            <!-- 卡片颜色 -->
                            <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="#2D2D2D"/>
                            <SolidColorBrush x:Key="CardStrokeColorDefaultBrush" Color="#444444"/>
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>

                    <!-- 字体定义保持不变 -->
                    <FontFamily x:Key="HarmonyBoldFont">
                        ms-appx:///Assets/Fonts/HarmonyOS_Sans_Bold.ttf#HarmonyOS Sans SC
                    </FontFamily>

                    <!-- 样式更新为使用主题资源 -->
                    <Style x:Key="BaseTextStyle" TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="{StaticResource HarmonyBoldFont}"/>
                        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>

                    <Style x:Key="InfoCardStyle" TargetType="Border">
                        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
                        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="CornerRadius" Value="8"/>
                        <Setter Property="Padding" Value="16"/>
                        <Setter Property="Margin" Value="0,0,0,16"/>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>