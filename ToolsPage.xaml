<Page
    x:Class="SystemInfoViewer.ToolsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="16" VerticalScrollBarVisibility="Auto" Background="{ThemeResource SystemControlBackgroundAltHighBrush}">
        <StackPanel Spacing="12">
            <TextBlock Text="工具" 
                      Style="{StaticResource HeaderTextBlockStyle}"/>

            <Border Style="{StaticResource InfoCardStyle}">
                <StackPanel>
                    <TextBlock Text="系统工具" 
                              Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0" Spacing="12">
                        <Button Content="打开任务管理器"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Left"
                            Click="OpenTaskManager_Click"/>
                        <Button Content="打开注册表编辑器"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Left"
                            Click="Openregedit_Click"/>
                        <Button Content="打开命令提示符"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Left"
                            Click="Opencmd_Click"/>
                        <Button Content="打开磁盘清理"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Left"
                            Click="Opencleanmgr_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource InfoCardStyle}">
                <StackPanel>
                    <TextBlock Text="第三方工具" 
                  Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0" Spacing="12">
                        <Button Content="打开Geek"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Left"
                            Click="Opengeek_Click"/>
                        <Button Content="打开Everything"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Left"
                            Click="Openeverything_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Button Style="{StaticResource ClickableCardStyle}" Click="OpenAppMgmtPage_Click">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <Viewbox Width="48" Height="48" VerticalAlignment="Top">
                        <Path Data="M181.333333 170.666667A96 96 0 0 0 85.333333 266.666667v106.666666A96 96 0 0 0 181.333333 469.333333h106.666667A96 96 0 0 0 384 373.333333v-106.666666A96 96 0 0 0 288 170.666667h-106.666667zM149.333333 266.666667a32 32 0 0 1 32-32h106.666667a32 32 0 0 1 32 32v106.666666a32 32 0 0 1-32 32h-106.666667a32 32 0 0 1-32-32v-106.666666zM480 213.333333a32 32 0 0 0 0 64h426.666667a32 32 0 0 0 0-64h-426.666667z m0 128a32 32 0 0 0 0 64h298.666667a32 32 0 0 0 0-64h-298.666667z m-298.666667 213.333334A96 96 0 0 0 85.333333 650.666667v106.666666A96 96 0 0 0 181.333333 853.333333h106.666667A96 96 0 0 0 384 757.333333v-106.666666A96 96 0 0 0 288 554.666667h-106.666667z m-32 96a32 32 0 0 1 32-32h106.666667a32 32 0 0 1 32 32v106.666666a32 32 0 0 1-32 32h-106.666667a32 32 0 0 1-32-32v-106.666666zM480 597.333333a32 32 0 0 0 0 64h426.666667a32 32 0 0 0 0-64h-426.666667z m0 128a32 32 0 0 0 0 64h298.666667a32 32 0 0 0 0-64h-298.666667z"
                  Fill="{ThemeResource TextFillColorPrimaryBrush}"/>
                    </Viewbox>
                    <StackPanel>
                        <TextBlock Text="应用管理" 
                      Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <TextBlock Text="管理已安装的应用程序"
                      Style="{StaticResource BodyTextBlockStyle}"
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource ClickableCardStyle}" Click="OpenStartupAppsMgmtPage_Click">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <Viewbox Width="48" Height="48" VerticalAlignment="Top">
                        <Path Data="M 32 192 A 96 96 0 0 1 128 96 h 704 A 96 96 0 0 1 928 192 v 266.9 A 1 1 0 0 0 928 458 A 288 288 0 0 1 464.5 800 H 128 A 96 96 0 0 1 32 704 V 192 z m 400.4 544 A 288 288 0 0 1 864 400.5 V 192 a 32 32 0 0 0 -32 -32 H 128 a 32 32 0 0 0 -32 32 v 512 a 32 32 0 0 0 32 32 h 304.4 z M 704 416 a 224 224 0 1 0 0 448 a 224 224 0 0 0 0 -448 z M 585.3 585.3 l 96 -96 a 32 32 0 0 1 45.3 0 l 96 96 a 32 32 0 0 1 -45.3 45.3 l -41.3 -41.4 V 768 a 32 32 0 0 1 -64 0 V 589.2 l -41.3 41.4 a 32 32 0 0 1 -45.3 -45.3 z"
      Fill="{ThemeResource TextFillColorPrimaryBrush}"/>
                    </Viewbox>
                    <StackPanel>
                        <TextBlock Text="启动项管理" 
          Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <TextBlock Text="管理系统启动时自动运行的应用程序"
          Style="{StaticResource BodyTextBlockStyle}"
          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Button>
        </StackPanel>
    </ScrollViewer>
</Page>
    