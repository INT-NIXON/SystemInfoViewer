<Window
    x:Class="SystemInfoViewer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 自定义标题栏 -->
        <Grid x:Name="CustomTitleBar" Grid.Row="0" 
              Background="{ThemeResource TitleBarBackgroundBrush}"
              PointerPressed="CustomTitleBar_PointerPressed"
              PointerMoved="CustomTitleBar_PointerMoved"
              PointerReleased="CustomTitleBar_PointerReleased">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 应用图标和标题 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,0">
                <Image Source="ms-appx:///Assets/Logo.png" Width="16" Height="16"/>
                <TextBlock Text="SystemInfoViewer" 
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           Style="{StaticResource CaptionTextBlockStyle}"/>
            </StackPanel>

            <!-- 窗口控制按钮 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <!-- 最小化按钮 -->
                <Button x:Name="MinimizeButton" Click="MinimizeButton_Click" Style="{StaticResource TitleBarButtonStyle}">
                    <Viewbox Width="12" Height="12">
                        <Path Data="M0,6 L12,6" 
                  Stroke="{Binding Foreground, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                  StrokeEndLineCap="Square"
                  StrokeStartLineCap="Square"/>
                    </Viewbox>
                </Button>

                <!-- 最大化/还原按钮 -->
                <Button x:Name="MaximizeButton" Click="MaximizeButton_Click" Style="{StaticResource TitleBarButtonStyle}">
                    <Viewbox Width="12" Height="12">
                        <Path x:Name="MaximizeIcon" 
                  Data="M0,0 L12,0 L12,12 L0,12 Z" 
                  Stroke="{Binding Foreground, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                  Fill="Transparent"/>
                    </Viewbox>
                </Button>

                <!-- 关闭按钮 -->
                <Button x:Name="CloseButton" Click="CloseButton_Click" Style="{StaticResource TitleBarCloseButtonStyle}">
                    <Viewbox Width="10" Height="10">
                        <Path Data="M0,0 L10,10 M10,0 L0,10" 
                  Stroke="{Binding Foreground, RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
                    </Viewbox>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1" x:Name="ContentGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧导航栏 -->
            <Border Grid.Column="0" Width="200" Background="{ThemeResource SystemControlBackgroundAltHighBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 导航内容 -->
                    <StackPanel Grid.Row="0" Spacing="8" Padding="12">
                        <!-- 信息按钮 -->
                        <RadioButton x:Name="HomeNavButton" 
                                     Content="信息" 
                                     GroupName="NavGroup"
                                     IsChecked="True"
                                     Checked="NavButton_Checked"
                                     Style="{StaticResource NavButtonStyle}"/>

                        <!-- 工具按钮 -->
                        <RadioButton x:Name="ToolsNavButton" 
                                     Content="工具" 
                                     GroupName="NavGroup"
                                     Checked="NavButton_Checked"
                                     Style="{StaticResource NavButtonStyle}"/>

                        <!-- 设置按钮 -->
                        <RadioButton x:Name="SettingsNavButton" 
                                     Content="设置" 
                                     GroupName="NavGroup"
                                     Checked="NavButton_Checked"
                                     Style="{StaticResource NavButtonStyle}"/>

                        <!-- 主题切换按钮 -->
                        <Button x:Name="ThemeToggleButton"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Height="40"
                                Margin="0,40,0,0"
                                Padding="12,0"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="ThemeToggleButton_Click"
                                CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Viewbox Width="20" Height="20" Grid.Column="0" Margin="0,0,12,0">
